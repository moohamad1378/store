@using Store_1.Application.Services.Orders.Queries.GetUserOrders;
@model List<GetUserOrdersDto>;
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Your Orders</h1>
<table style="border:dashed" class="table table-responsive table-active table-bordered">
    <thead>
        <tr style="border:solid">
            <th>Order number</th>
            <th>Invoice number</th>
            <th>Order status</th>
            <th>Products in this order</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr style="border:solid">
                <td>@item.OrderId</td>
                <td>@item.OrderState </td>
                <td>@item.RequestPayId </td>

                <td>
                    <table>
                        @foreach (var detail in item.orderDetails)
                        {
                            <tr style="border:outset">
                                <td> @detail.ProductName</td>
                                <td> @detail.Price</td>
                                <td> @detail.Count</td>
                            </tr>
                        }
                    </table>

                </td>
            </tr>
        }

    </tbody>
</table>



